<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/set_polygon_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/PPR_BLUE_GREY800"
        android:foreground="@drawable/white_ripple_effect"
        android:layout_margin="5dp"
        android:layout_alignParentTop="true"
        android:text="@string/set_polygon"
        android:textColor="@color/PPR_FULL_WHITE"/>


    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/set_polygon_btn"
        android:layout_above="@id/save_coordinate_btn"
        tools:context=".MapsActivity" />

    <Button
        android:id="@+id/save_coordinate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/PPR_GREEN500"
        android:foreground="@drawable/white_ripple_effect"
        android:elevation="20dp"
        android:layout_alignParentBottom="true"
        android:text="Continue"
        android:textColor="@color/PPR_FULL_WHITE"/>





</RelativeLayout>